import json
import boto3
import uuid

dynamodb = boto3.resource('dynamodb')
table = dynamodb.Table('static_web_app')

def lambda_handler(event, context):
    try:
        # Print the entire event for debugging
        print("Received event:", event)

        # Check if event data is directly in the root of the event object
        if 'body' in event:
            body = json.loads(event['body'])
        else:
            body = event
        
        # Generate a unique ID for the item
        item_id = str(uuid.uuid4())

        # Create new item in DynamoDB table
        response = table.put_item(
            Item={
                'id': item_id,
                'email': body['email'],
                'name': body['name'],
                'phone': body['phone'],
                'password': body['password']
            }
        )

        # Return response
        return {
            'statusCode': 200,
            'headers': {
                'Content-Type': 'application/json',
                'Access-Control-Allow-Origin': '*'
            },
            'body': json.dumps({'message': 'Registration successful'})
        }
